@model PWEB01B.ViewModel.ActorPelicula

@{
    ViewBag.Title = "Añade un Actor";
}

<h2>Actores</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ActorPelicula</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Pelicula.Titulo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pelicula.Titulo)
                </dd>
            </dl>
        </div>
        @Html.HiddenFor(model => model.PeliculaId)

        <div class="form-group">
            @Html.LabelFor(model => model.ActorId, "Actor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.DropDownList("ActorId", null, "Seleccione un Actor", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ActorId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Añadir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver al Detalle", "Details", new { id = Model.PeliculaId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
