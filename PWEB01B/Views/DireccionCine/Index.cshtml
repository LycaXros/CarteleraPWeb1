@model IEnumerable<PWEB01B.Models.DireccionCine>

@{
    ViewBag.Title = "Direcciones";
}

<h2>Direcciones</h2>

<p>
    @Html.ActionLink("Nueva Direccion", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Calle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ciudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cine.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Calle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cine.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CineId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CineId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CineId })
        </td>
    </tr>
}

</table>
