@model PWEB01B.Models.Genero

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Genero</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        @if(Model.Peliculas.Count > 0)
        {
            <dt>Peliculas</dt>
            <dd>
                <ul>
                    @foreach (var item in Model.Peliculas)
                    {
                        <li>@item.Titulo  - (@item.Clasificacion) </li>
                    }
                </ul>
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.GeneroId }) |
    @Html.ActionLink("Volver al Listado", "Index")
</p>
