@model IEnumerable<PWEB01B.Models.Genero>

@{
    ViewBag.Title = "Listado Generos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peliculas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @item.Peliculas.Count
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.GeneroId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.GeneroId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.GeneroId })
        </td>
    </tr>
}

</table>
