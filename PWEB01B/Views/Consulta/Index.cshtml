@*@model IEnumerable<PWEB01B.Models.ConsultaCartelera>*@
@model IEnumerable<PWEB01B.ViewModel.Cartelera2ViewModel>

@{
    ViewBag.Title = "Consulta";
}

<h2>Consulta Cartelera</h2>
<hr />
@using (Html.BeginForm("Index", "Consulta", FormMethod.Get, new { @autocomplete = "off", @class = "form-inline" }))
{
<div>

    <div class="form-group mb-2">
        @Html.Label("Peliculas", htmlAttributes: new { @class = "control-label " })
        @Html.TextBox("Pel", null, new { @class = "form-control" })
    </div>
    <div class="form-group mb-2">
        @Html.DropDownList("Gid", ViewBag.GeneroId as SelectList, "Seleccione un Genero", new { @class = "form-control" })
    </div>
    <div class="form-group mb-2">
        @Html.DropDownList("Cid", ViewBag.CineId as SelectList, "Seleccione un Cinema", new { @class = "form-control" })
    </div>
    <div class="form-group mb-2">
        @Html.DropDownList("Tid", ViewBag.TandaId as SelectList, "Seleccione una Tanda", new { @class = "form-control" })
    </div>
    <input type="submit" value="Buscar" class="btn btn-default" />

</div>
}
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cinema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pelicula)
            </th>
            <th>
                Hora de la Tanda
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7">
                    <span style="color:red"> No se Encuentran Datos</span>
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cinema)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pelicula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora_Tanda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.ActionLink("Ver Detalles(Pelicula)", "Details", "Pelicula", new { id = item.PeliculaId }, new { })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
