@model PWEB01B.Models.Pasa

@{
    ViewBag.Title = "Entrada Nuevo";
}

<h2>Nueva Entrada</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Pasa</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.CineId, "Cinema", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CineId", null,"Seleccione un Cinema", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CineId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PeliculaId, "Pelicula", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("PeliculaId", null,"Seleccione una Pelicula", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PeliculaId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TandaId, "Tanda", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TandaId", null,"Seleccione una Tanda", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TandaId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver al Listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
